<div class="container-fluid">
    <div class="row my-3">
        <div class="col-lg-4 mb-2">
            <div class="bg-info top-chart-earn p-3 rounded shadow">
                <h5 class="text-white">Total Tickets</h5>
                <h2 class="text-white"><%= stats.totalTickets %></h2>
            </div>
        </div>
        <div class="col-lg-4 mb-2">
            <div class="bg-warning top-chart-earn p-3 rounded shadow">
                <h5 class="text-dark">Total Users</h5>
                <h2 class="text-dark"><%= stats.totalUsers %></h2>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="bg-danger top-chart-earn p-3 rounded shadow">
                <h5 class="text-white">Total Employees</h5>
                <h2 class="text-white"><%= stats.totalEmployees %></h2>
            </div>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-lg-12">
            <div class="bg-white top-chart-earn p-3 rounded shadow">
                <ul class="nav nav-pills chart-header-tab mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link chart-nav active" id="pills-status-tab" data-bs-toggle="pill" 
                                data-bs-target="#pills-status" type="button" role="tab">
                            Status Distribution
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link chart-nav" id="pills-priority-tab" data-bs-toggle="pill" 
                                data-bs-target="#pills-priority" type="button" role="tab">
                            Priority Distribution
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link chart-nav" id="pills-organizational-tab" data-bs-toggle="pill" 
                                data-bs-target="#pills-organizational" type="button" role="tab">
                            Organizational Distribution
                        </a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-status" role="tabpanel">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="statusChart"></div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-priority" role="tabpanel">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="priorityChart"></div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-organizational" role="tabpanel">
                        <div class="row">
                            <div class="col-md-12">
                                <div id="organizationalChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-lg-12">
            <div class="bg-white top-chart-earn p-3 rounded shadow">
                <div class="card">
                    <div class="card-header">
                        Recent Tickets
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Incident Number</th>
                                    <th>Summary</th>
                                    <th>Status</th>
                                    <th>Assignee</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentTickets.forEach(function(ticket) { %>
                                <tr>
                                    <td><%= ticket.ticket_incident_number %></td>
                                    <td><%= ticket.ticket_summary %></td>
                                    <td><%= ticket.ticket_status %></td>
                                    <td>
                                        <%= ticket['ticketPerson.karyawan_fullname'] %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Highcharts Library -->
<script src="https://code.highcharts.com/highcharts.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Status Distribution Chart
    Highcharts.chart('statusChart', {
        chart: { type: 'pie' },
        title: { text: 'Ticket Status Distribution' },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f}%'
                }
            }
        },
        series: [{
            name: 'Status',
            colorByPoint: true,
            data: [
                <% statusDistribution.forEach(function(status, index) { %>
                {
                    name: '<%= status.ticket_status %>',
                    y: <%= status.count %>,
                    sliced: <%= index === 0 %>,
                    selected: <%= index === 0 %>
                }<%= index < statusDistribution.length - 1 ? ',' : '' %>
                <% }); %>
            ]
        }]
    });

    // Priority Distribution Chart
    Highcharts.chart('priorityChart', {
        chart: { type: 'pie' },
        title: { text: 'Ticket Priority Distribution' },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f}%'
                }
            }
        },
        series: [{
            name: 'Priority',
            colorByPoint: true,
            data: [
                <% priorityDistribution.forEach(function(priority, index) { %>
                {
                    name: '<%= priority.ticket_priority %>',
                    y: <%= priority.count %>,
                    sliced: <%= index === 0 %>,
                    selected: <%= index === 0 %>
                }<%= index < priorityDistribution.length - 1 ? ',' : '' %>
                <% }); %>
            ]
        }]
    });

    // Organizational Distribution Chart
    Highcharts.chart('organizationalChart', {
        chart: { type: 'pie' },
        title: { text: 'Tickets by Organizational Unit' },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f}%'
                }
            }
        },
        series: [{
            name: 'Organizational Unit',
            colorByPoint: true,
            data: [
                <% organizationalDistribution.forEach(function(org, index) { %>
                {
                    name: '<%= org.organizational %>',
                    y: <%= org.count %>,
                    sliced: <%= index === 0 %>,
                    selected: <%= index === 0 %>
                }<%= index < organizationalDistribution.length - 1 ? ',' : '' %>
                <% }); %>
            ]
        }]
    });
});
</script>